{
  "name": "angular-client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host=0.0.0.0 --watch --poll=2000",
    "build": "ng build --configuration production",
    "build:dev": "ng build --configuration development --output-path=./dist/angular-client",
    "build:prod": "ng build --configuration production --output-path=./dist/angular-client",
    "watch": "ng build --watch --configuration development",
    "coverage": "ng test --code-coverage",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "lint:all": "npm run lint:ts && npm run lint:html && npm run lint:scss",
    "lint:html": "htmlhint src --config .htmlhintrc --ignore assets/**",
    "lint:scss": "stylelint \"src/**/*.scss\" --config .stylelintrc.json",
    "lint:scss:fix": "stylelint \"src/**/*.scss\" --config .stylelintrc.json --fix",
    "lint:ts": "eslint \"src/**/*.ts\" --color -c .eslintrc.json --ext .ts .",
    "prettier": "npx prettier --write .",
    "prettier:write": "prettier \"./{src/app,e2e,src/assets/scss}/**/*.{ts,js,html,scss}\" --write",
    "prettier:test": "prettier \"./{src/app,e2e,src/assets/scss}/**/*.{ts,js,html,scss}\" --list-different",
    "stylelint-check": "stylelint-config-prettier-scss-check",
    "serve-ui-dev-local": "ng serve",
    "serve-ui-dev-docker": "npm run docker-serve-dev",
    "docker-serve-dev": "cd .. && docker-compose -f docker-compose.dev.yml up --build",
    "remove-ui-dev-docker-container": "docker stop recreateyourself-clt.dev.container",
    "unused-css": "ngx-unused-css"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~16.2.8",
    "@angular/common": "~16.2.8",
    "@angular/compiler": "~16.2.8",
    "@angular/core": "~16.2.8",
    "@angular/forms": "~16.2.8",
    "@angular/platform-browser": "~16.2.8",
    "@angular/platform-browser-dynamic": "~16.2.8",
    "@angular/router": "~16.2.8",
    "@fortawesome/angular-fontawesome": "^0.13.0",
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-brands-svg-icons": "^6.4.2",
    "@fortawesome/free-regular-svg-icons": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.1",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.13.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~16.2.5",
    "@angular-eslint/builder": "^16.2.0",
    "@angular-eslint/eslint-plugin": "16.2.0",
    "@angular-eslint/eslint-plugin-template": "16.2.0",
    "@angular-eslint/schematics": "16.2.0",
    "@angular-eslint/template-parser": "16.2.0",
    "@angular/cli": "~16.2.5",
    "@angular/compiler-cli": "~16.2.8",
    "@types/bootstrap": "^5.2.7",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.8.3",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "htmlhint": "^1.1.4",
    "jasmine-core": "~5.1.1",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ngx-unused-css": "^4.0.0-1",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-scss": "^5.2.1",
    "typescript": "~5.1.6"
  }
}
